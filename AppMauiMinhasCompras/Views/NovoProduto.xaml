<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    
    <VerticalStackLayout Spacing="10" Margin="15">
        <Label Text="Descrição: "/>
        <Entry x:Name="txt_desc"/>
        
        <Label Text="Quantidade: "/>
        <Entry x:Name="txt_quant" Keyboard="Numeric"/>
        
        <Label Text="Preço Unitario"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>

        <Label Text="Categoria:"/>
        <Picker x:Name="picker_categoria"/>

    </VerticalStackLayout>
</ContentPage>